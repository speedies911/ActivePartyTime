
<RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.app.activepartytime.activities.fragments.GameInfoFragment"
        android:background="#00741d"
        tools:ignore="MergeRootFrame"
        android:minHeight="500dp"
        android:minWidth="500dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team"
            android:id="@+id/activeTeam"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:minHeight="40dp"
            android:minWidth="100dp"
            android:textSize="20dp" />






        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START/PAUSE"
            android:id="@+id/startStopButton"
            android:layout_below="@+id/taskLayout"
            android:layout_marginLeft="@dimen/activity_time_button_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TIME"
            android:id="@+id/stopWatch"
            android:minWidth="100dp"
            android:minHeight="50dp"
            android:layout_below="@+id/taskLayout"
            android:layout_marginLeft="@dimen/activity_time_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textIsSelectable="false"
            android:gravity="center" />

        <ImageButton

            android:id="@+id/crossButton"
            android:background="@drawable/cross"
            android:layout_below="@+id/stopWatch"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:visibility="gone"
            />



        <ImageButton
            android:id="@+id/tickButton"
            android:background="@drawable/tick"
            android:layout_below="@+id/stopWatch"
            android:layout_toRightOf="@+id/crossButton"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#dd0000"
        android:layout_height="220dp"
        android:id="@+id/taskLayout"
        android:layout_below="@+id/activeTeam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="gone">







    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#dd0000"
        android:layout_height="200dp"
        android:id="@+id/taskLayoutGenerate"
        android:layout_below="@+id/activeTeam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENERATE TASK"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="85dp"
            android:textColor="@color/Yellow"
            android:textSize="20dp" />

    </RelativeLayout>



</RelativeLayout>
