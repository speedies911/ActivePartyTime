<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/start_page"
    >

    <Button
        android:id="@+id/buttonStartPagePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/startPageButton"
        android:text="@string/ButtonPlay"
        android:layout_marginTop="300dp"
        android:onClick="play"
        />

    <Button
        android:id="@+id/buttonStartPageSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/startPageButton"
        android:text="@string/ButtonSettings"
        android:onClick="test"
        android:layout_below="@+id/buttonStartPagePlay"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonStartPageQuit"
        style="@style/startPageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:onClick="quit"
        android:layout_below="@+id/buttonStartPageSettings"
        android:layout_alignLeft="@+id/buttonStartPagePlay"
        android:layout_alignStart="@+id/buttonStartPagePlay" />

</RelativeLayout>
